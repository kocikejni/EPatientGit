@model IEnumerable<EPatient.Models.Appointment>

@{ ViewBag.Title = "PendingAppointments";}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Appointment</li>
        <li class="active">Pending Appointments</li>
    </ol>
</div>

<h2>Pending Appointments</h2>

<p>
    @Html.ActionLink("Create New", "AddAppointment", null, new { @class = "btn btn-primary" })
</p>
<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                Patient Name
            </th>
            <th>
                Doctor Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Problem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Doctor.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Patient.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Problem)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditAppointment", new { id = item.Id }) |
        @Html.ActionLink("Details", "DetailOfAppointment", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeleteAppointment", new { id = item.Id })
    </td>
</tr>}
    </tbody>

</table>


@section scripts {
    <script>$(document).ready(function () {
            $("#table_id").dataTable();
        });</script>
}